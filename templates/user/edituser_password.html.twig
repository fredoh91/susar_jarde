{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur
{% endblock %}

{% block body %}

	<div class="container my-3">
		<div class="row">
			<h1>Visualisation/Modification de l'utilisateur</h1>
			<div class="col">
				{{ form_start(form) }}

				{% include "_partials/_user_registration_edit.html.twig" %}

				<div class="row">
					<div class="col-6">
						{{ form_label(form.plainPassword, 'Mot de passe :') }}
						{{ form_widget(form.plainPassword) }}
					</div>
					<div class="col-3">
						{{ form_widget(form.Valider) }}
					</div>
					{% if is_granted('ROLE_SUPER_ADMIN') %}
						<div class="col-3">
							{{ form_widget(form.Annuler) }}
						</div>
					{% endif %}

				</div>
				{# <div class="row">
								</div> #}

				{{ form_row(form._token) }}

				{# {{ form_end(form) }} #}
				{{ form_end(form, {render_rest: false}) }}
			</div>
		</div>
	</div>
{% endblock %}
